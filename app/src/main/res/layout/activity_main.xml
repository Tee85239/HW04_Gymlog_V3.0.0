<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="300dp"
        tools:listitem="@layout/gymlog_recyler_item"
        android:padding="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/logDisplayRecylerView"


        />


    <TextView
        android:id="@+id/exerciseLabelTextView"
        android:layout_width="132dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="196dp"
        android:text="@string/exercise"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logDisplayRecylerView"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <EditText
        android:id="@+id/exerciseInputText"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:hint="@string/add_exercise"
        android:inputType="textAutoComplete"
        android:padding="8dp"
        android:textColorHint="#546E7A"
        app:layout_constraintBottom_toBottomOf="@+id/exerciseLabelTextView"
        app:layout_constraintStart_toEndOf="@+id/exerciseLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/logDisplayRecylerView"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="LabelFor,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/weightLabelTextView"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/weight"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseLabelTextView"
        tools:ignore="MissingConstraints,TextSizeCheck"


        />

    <EditText
        android:id="@+id/weightInputText"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:autofillHints=""
        android:hint="@string/enter_weight"
        android:inputType="number|numberDecimal"
        android:padding="8dp"
        android:textColorHint="#546E7A"
        app:layout_constraintBaseline_toBaselineOf="@+id/weightLabelTextView"
        app:layout_constraintStart_toEndOf="@+id/weightLabelTextView"

        tools:ignore="LabelFor,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/repLabelTextView"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/reps"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightLabelTextView"
        tools:ignore="MissingConstraints,TextSizeCheck"


        />

    <EditText
        android:id="@+id/repInputText"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:autofillHints=""
        android:hint="@string/enter_rep"
        android:inputType="number|numberDecimal"
        android:padding="8dp"
        android:textColorHint="#546E7A"
        app:layout_constraintBaseline_toBaselineOf="@+id/repLabelTextView"
        app:layout_constraintStart_toEndOf="@+id/repLabelTextView"

        tools:ignore="LabelFor,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/logButton"
        android:layout_width="390dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="184dp"
        android:text="@string/log"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repInputText" />


</androidx.constraintlayout.widget.ConstraintLayout>